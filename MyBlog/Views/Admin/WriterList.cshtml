@model IEnumerable<MyBlog.Models.Article>
@{
    ViewBag.Title = "WriterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (Model.Count() == 0)
    {
        <h3 class="alert alert-warning">Kayıt bulunamadı...!</h3>
    }
    else
    {
        <table class="table col-md-8">
            <tr>

                <th>
                    Kullanıcı Adı
                </th>
                <th>
                    Başlık
                </th>

                <th>
                    Açıklama
                </th>
                <th>
                    Tarih
                </th>

                <th>
                    Onay
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <label class="btn btn-primary btn-sm">@item.userName</label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)

                    </td>

                    <td>
                        @if (item.Description.Length>20)
                        {
                            <p>@item.Description.Substring(0,20):(...)</p>
                    }
                    else
                    {
                        @item.Description
                    }
                    </td>
                    <td>
                        @item.Date.ToShortDateString()
                    </td>

                    <td>
                        @if (item.confirm)
                        {


                            <label class="btn btn-sm btn-success">Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-sm btn-danger">Hayır</label>

                        }
                    </td>
                    <td>
                        <a href="/Article/Edit/@item.Id">Düzenle</a> |
                        <a href="/Article/Details/@item.Id">Detay</a> |
                        <a href="/Article/Delete/@item.Id">Sil</a>
</tr>
            }

        </table>
    }
</div>