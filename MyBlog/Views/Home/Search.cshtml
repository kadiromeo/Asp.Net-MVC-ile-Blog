@model IEnumerable<MyBlog.Models.Article>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
<article>
    <div class="post-image">
        <div class="post-heading">
            <h3><a href="/Home/Detail/@item.Id">@item.Title</a></h3>
        </div>
        <img src="@item.Image" alt="" />
    </div>

    @if (item.Description.Length > 60)
    {
        <p>@item.Description.Substring(0, 60) : (...)</p>

    }
    else
    {
        <p>@item.Description</p>
    }

    <div class="bottom-article">
        <ul class="meta-post">
            <li><i class="fas fa-calendar"></i> @item.Date.ToShortDateString()</li>
            <li><i class="fas fa-user"></i> @item.userName</li>
            <li><i class="fas fa-eye"></i> @item.Views</li>
            <li><i class="fas fa-comment"></i> @item.Comments.Count()</li>
        </ul>
        <a href="/Home/Detail/@item.Id" class="pull-right">Devamını oku... <i class="icon-angle-right"></i></a>
    </div>
</article>
}