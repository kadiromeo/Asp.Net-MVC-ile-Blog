@model IEnumerable<MyBlog.Models.Article>

<ul class="recent">
    @foreach (var item in Model)
    {


    <li>
        <div >
            <div >
                <img src="@item.Image" class="pull-left" alt="" width="80" height="80" />

            </div>
            <div>

                <h6><a href="/Home/Detail/@item.Id">@item.Title</a></h6>
            </div>
            
        </div>

        <div class="footer">
            @item.userName    <i class="fas fa-eye"></i> @item.Views <i class="fas fa-comment"></i> @item.Comments.Count()
        </div>
    </li>


        <hr />
    }


</ul>