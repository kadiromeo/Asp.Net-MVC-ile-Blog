<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <!-- css -->
    <link href="~/Template/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Template/css/fancybox/jquery.fancybox.css" rel="stylesheet">
    <link href="~/Template/css/jcarousel.css" rel="stylesheet" />
    <link href="~/Template/css/flexslider.css" rel="stylesheet" />
    <link href="~/Template/css/style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/3b46233d75.js" crossorigin="anonymous"></script>


    <script src="~/Content/jquery.min.js"></script>
    <link href="~/Content/jquery.rateyo.css" rel="stylesheet" />
    <script src="~/Content/jquery.rateyo.js"></script>
    <link href="~/Content/jquery.rateyo.min.css" rel="stylesheet" />
    <script src="~/Content/jquery.rateyo.min.js"></script>
    <!-- Theme skin -->
    <link href="~/Template/skins/default.css" rel="stylesheet" />

    <!-- =======================================================
    Theme Name: Moderna
    Theme URL: https://bootstrapmade.com/free-bootstrap-template-corporate-moderna/
